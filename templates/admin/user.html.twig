{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <section class="admin-users homepage-body">
        <div class="return-admin-page">
            <a href="{{ path('admin_index') }}">Return to main page</a>
        </div>
        <div class="container-fluid user-details">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-3 search-field">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-3 search-field">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-3 search-field">
                    {{ form_row(form.coins, {
                        'attr': {
                            'type': 'number',
                            'min': '0',
                        }
                    }) }}
                </div>
                <div class="col-md-3 search-field">
                    {{ form_row(form.imageFile) }}
                </div>
            </div>
            <button type="submit" class="btn btn-save-bottom">Save</button>
            {{ form_end(form) }}
        </div>
        <div class="container-fluid  user-details user-delete">
            <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn btn-save-bottom">Delete</button>
            </form>
{#            <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-save-bottom">Delete</a>#}
{#            <a href="{{ path('admin_user_delete', {'id': user.id}) }} #}{#name="_token"#}{# value="{{ csrf_token('delete' ~ user.id) }}" class="btn btn-save-bottom">Delete</a>#}
        </div>
    </section>
{% endblock %}
